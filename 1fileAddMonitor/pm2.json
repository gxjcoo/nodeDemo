{
    "apps": [
      {
        "name": "ws",
        "script": "./app.js",
        "env": {
          "NODE_ENV": "development"
        },
        "env_production": {
          "NODE_ENV": "production"
        },
        "instances": 1,
        "exec_mode": "cluster",
        "max_restarts" : 3,
        "restart_delay" : 5000,
        "log_date_format" : "YYYY-MM-DD HH:mm Z",
        "combine_logs" : true
      }
    ]
  }